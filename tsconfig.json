{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist"
  },
  "lib": ["es6"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "noImplicitAny": true,
  "strict": true,
  "strictNullChecks": true,
  "strictFunctionTypes": true,
  "strictBindCallApply": true,
  "strictPropertyInitialization": true,
  "noImplicitThis": true,
  "alwaysStrict": true,
  "esModuleInterop": true
  // "skipLibCheck": true
}
